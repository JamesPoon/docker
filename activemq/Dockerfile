FROM panshx/jre

ENV 	ACTIVEMQ_HOME /usr/local/activemq
ADD apache-activemq-5.15.5 ${ACTIVEMQ_HOME}

RUN apk update && apk upgrade && apk add bash

WORKDIR ${ACTIVEMQ_HOME}
# ACTIVEMQ_TCP=61616 ACTIVEMQ_AMQP=5672 ACTIVEMQ_STOMP=61613 ACTIVEMQ_MQTT=1883 ACTIVEMQ_WS=61614 ACTIVEMQ_UI=8161
EXPOSE 8161 5672 61613 61614 61616 1883

CMD bin/activemq start && sh
